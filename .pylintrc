[MASTER]
# Ignore external libraries
ignore=node_modules,.venv,.node_modules

[MESSAGES CONTROL]
disable=
    missing-docstring,
    too-few-public-methods,
    too-many-arguments,
    logging-fstring-interpolation,
    broad-exception-caught,
    no-else-return,
    no-else-continue,
    import-outside-toplevel,
    global-statement,
    wrong-import-position,
    wrong-import-order,
    unused-import,
    unused-variable,
    unused-argument,
    invalid-name,
    protected-access,
    raise-missing-from,
    redefined-builtin,
    redefined-outer-name,
    redefined-argument-from-local,
    consider-iterating-dictionary,
    duplicate-code,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-many-return-statements,
    too-many-nested-blocks,
    unspecified-encoding,
    expression-not-assigned,
    comparison-with-callable,
    ungrouped-imports,
    consider-using-dict-items,
    line-too-long,
    bare-except
    
[FORMAT]
max-line-length=120

[DESIGN]
max-attributes=15
max-locals=20
max-branches=15
max-statements=60
max-returns=8

[BASIC]
good-names=i,j,k,e,f,db,id,_

[SIMILARITIES]
min-similarity-lines=10
